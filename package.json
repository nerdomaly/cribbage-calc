        "chalk": "^4.1.0",
        "clear": "^0.1.0",
        "commander": "^6.1.0",
        "figlet": "^1.5.0",
        "lodash": "^4.17.20",
        "path": "^0.12.7"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.2.12",
        "@types/lodash": "^4.14.161",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.10.0",
        "chai": "^4.2.0",
        "chai-sorted": "^0.2.0",
        "mocha": "^8.1.3",
        "nodemon": "^2.0.4",
        "nyc": "^15.1.0",
        "ts-node": "^9.0.0",
